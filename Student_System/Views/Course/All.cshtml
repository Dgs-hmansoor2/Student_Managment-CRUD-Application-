@model IEnumerable<Student_System.Cours>


<br /><br />
<div style="float: right;">
    @using (Html.BeginForm("Index", "Course", FormMethod.Get))
    {
        @Html.TextBox("Searching")
        <input type="submit" value="Search" class="btn btn-default" />
    }
</div>

<br />
<p>
    @Html.ActionLink("Add Course", "Create")
</p>
<br />
<table class="table" style="border:1px solid black;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cname)
        </td>
        <td>

            @Html.ActionLink("Edit", "Edit", new { id = item.Code })
            &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
            @Html.ActionLink("Delete", "Delete", new { id = item.Code })
        </td>
    </tr>
}

</table>
